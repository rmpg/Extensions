	<description>
		<![CDATA[Toolset from MyChannel-Apps for Knuddels]]>
	</description>
	<ui-access> 
		<![CDATA[Click on File > New... and select a new project with the KFramework.]]>
	</ui-access> 
	<files>
		<!-- Images -->
		<file source="configuration/Shared/MM/Images/type_int.gif" destination="$dreamweaver/configuration/Shared/MM/Images/" />
		<file source="configuration/Shared/MM/Images/type_bool.gif" destination="$dreamweaver/configuration/Shared/MM/Images/" />
		<file source="configuration/Shared/MM/Images/type_string.gif" destination="$dreamweaver/configuration/Shared/MM/Images/" />
		
		<file source="configuration/CodeHints/KFramework.xml" destination="$dreamweaver/configuration/CodeHints/" file-type="ordinary" />
		<file source="configuration/CodeHints/Knuddels.xml" destination="$dreamweaver/configuration/CodeHints/" file-type="ordinary" />
		<file source="configuration/DocumentTypes/NewDocuments/main.js" destination="$dreamweaver/configuration/DocumentTypes/NewDocuments/" />
        <file source="Strings/MCA.xml" destination="$dreamweaver/Strings/" />
        <!--<file source="BuiltIn/Knuddels/" destination="$dreamweaver/configuration/BuiltIn" />-->
	</files>
	<documenttype-changes>
		<documenttype-insert>
			<documenttype file="main.js" id="JS" internaltype="Text" macfileextension="js" winfileextension="js" writebyteordermark="false" mimetype="text/javascript">
				<TITLE>
					<MMString:loadString id="MCA_Document_Name" />
				</TITLE>
				<description>
					<MMString:loadString id="MCA_Document_Description" />
				</description>
			</documenttype>
		</documenttype-insert>
	</documenttype-changes>
	<extensions-changes>
		<extension-insert extension="JS" description="JavaScript" />
	</extension-changes>
	<signatures>
		<signature name="KFramework extension for Dreamweaver" extensiontype="0" signed="true" certificateType="0" publisher="www.mychannel-apps.de" />
	</signatures>
